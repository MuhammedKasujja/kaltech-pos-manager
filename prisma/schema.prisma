generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Account {
  id          Int          @id @default(autoincrement())
  account_key String
  expires_at  Int?
  devices     SyncDevice[]
  uploads     DataUpload[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model DataUpload {
  id        Int      @id @default(autoincrement())
  device_id String
  user_id   String
  data      Json
  upload_id Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Account   Account? @relation(fields: [accountId], references: [id])
  accountId Int?
}

model User {
  id         Int      @id @default(autoincrement())
  first_name String
  last_name  String
  email      String   @unique
  password   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model SyncDevice {
  id          String   @unique
  user_id     String
  account_key String
  device_id   String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Account     Account? @relation(fields: [accountId], references: [id])
  accountId   Int?
}
